<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if(locals.usuario){ %>
		<%- include('./partials/headerLogueado') %>
		<% } else{ %>
			<%- include('./partials/headerDeslogueado') %>
			<% } %>

	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner-autos.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0; i< 4; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= autos[i].id %>">
							<figure class="product-box_image">
								<img src="images/products/<%= autos[i].nombre_foto %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= autos[i].nombre_producto %></h2>
								<p><%= autos[i].descripcion %> </p>
							</article>
						</a>
                        
					</section>
				</div>


				<% } %>
		
	<!-- /MÃ¡s comentados -->
    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mas Comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=5; i< 9; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= autos[i].id %>">
							<figure class="product-box_image">
								<img src="images/products/<%= autos[i].nombre_foto %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= autos[i].nombre_producto %></h2>
								<p><%= autos[i].descripcion %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>


				<% } %>


	<%- include('./partials/footer') %>

</body>	
</html>
