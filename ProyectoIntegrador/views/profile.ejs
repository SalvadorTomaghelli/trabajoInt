<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
<%- include('./partials/headerLogueado') %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container product-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/usuario1.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.nombre %>
						<a href="/users/profileEdit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
					<div>
						<ul class="">
							<li>
								<% let ctdProductos = 0  %>
								<% for( let i = 0; i < usuario.Productos.length; i++ ) { %>
									<% if (usuario.Productos[i].id_usuario) { %>
										<% ctdProductos++ %>
										<% } %>
								<% } %>
								<%= ctdProductos %> Productos
						
						</li>
							<li>200 seguidores</li>
							<li>300 comentarios</li>
						</ul>
					</div>		
				
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container product-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="product-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->


			<% for( let i = 0; i < usuario.Productos.length; i++ ) { %>
			
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= usuario.Productos[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= usuario.Productos[i].nombre_foto %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= usuario.Productos[i].nombre_producto %></h2>
								<p><%= usuario.Productos[i].descripcion %></p>
								<p>Subido por: <%= usuario.nombre %></p>
							</article>
						</a>
					</section>
				</div>


			<% } %>
	<%- include('./partials/footer') %>

</body>	
</html>