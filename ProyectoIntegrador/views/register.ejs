<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
<%- include('./partials/headerDeslogueado') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12">
				<form action="/users/register" method="post" novalidate>
					<div>
						<label for="email">Email:</label>
						<input id="email" type="email" name="email" value="<%= locals.oldData && oldData.email ? oldData.email : null  %>">
						<% if (locals.errors && errors.email) { %>
                            <div class="error-msg"><%= errors.email.msg %></div>
                        <% } %>
					</div>
					<div>
						<label for="user">Usuario:</label>
						<input id="user" type="text" name="user" value="<%= locals.oldData && oldData.user ? oldData.user : null  %>">
						<% if (locals.errors && errors.user) { %>
                            <div class="error-msg"><%= errors.user.msg %></div>
                        <% } %>
					</div>
					<div>
						<label for="password">Contrasenia:</label>
						<input id="password" type="password" name="password" value="">
						<% if (locals.errors && errors.password) { %>
                            <div class="error-msg"><%= errors.password.msg %></div>
                        <% } %>
					</div>
					<div>
						<label for="fecha">Fecha de nacimiento:</label>
						<input id="fecha" type="date" name="fecha" value="">
					</div>
					<div>
						<label for="DNI">DNI:</label>
						<input id="DNI" type="number" name="DNI" value="">
					</div>
					<div>
						<label for="profile">Foto de perfil:</label>
						<input id="profile" type="text" name="profile" value="">
					</div>
					<div>
						<button type="submit">Enviar</button>
					</div>
				</form>		
			</h2>


			<%- include('./partials/footer') %>

</body>

</html>