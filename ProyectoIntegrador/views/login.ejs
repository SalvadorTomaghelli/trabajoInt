<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

	<!-- Header -->
	<% if(locals.usuario){ %>
		<%- include('./partials/headerLogueado') %>
		<% } else{ %>
			<%- include('./partials/headerDeslogueado') %>
			<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form action="/users/login" method="post">
					<div>
						<label for="user">Email:</label>
						<input id="email" type="email" name="email" value="<%= locals.oldData && oldData.email ? oldData.email : null  %>">
						<% if (locals.errors && errors.email) { %>
                            <div class="error-msg"><%= errors.email.msg %></div>
                        <% } %>
					</div>
					<div>
						<label for="password">Contrasenia:</label>
						<input id="password" type="password" name="password" value="">
						<% if (locals.errors && errors.password) { %>
                            <div class="error-msg"><%= errors.password.msg %></div>
                        <% } %>
					</div>
					<div>
						<label for="recordame">Recordame</label>
						<input id="recordame" type="checkbox" name="recordame" value="">
					</div>
					<div>
						<button type="submit">Enviar</button>
					</div>
				</form>
			</h2>


			<%- include('./partials/footer') %>

</body>

</html>