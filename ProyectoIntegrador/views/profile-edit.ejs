<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if(locals.usuario){ %>
		<%- include('./partials/headerLogueado') %>
		<% } else{ %>
			<%- include('./partials/headerDeslogueado') %>
			<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form action="/users/profileEdit" method="post">
					<div>
						<label for="email">Email:</label>
						<input id="email" type="email" name="email" value="<%=locals.usuario.email %>">
					
					</div>
					
					<div>
						<label for="user">Usuario:</label>
						<input id="user" type="text" name="user" value="<%=locals.usuario.nombre %>">
					</div>
					<div>
						<label for="password">Contrasenia:</label>
						<input id="password" type="password" name="password" value="">
					</div>
					<div>
						<label for="fecha">Fecha de nacimiento:</label>
						<input id="fecha" type="date" name="fecha" value="<%=locals.usuario.fecha %>">
					</div>
					<div>
						<label for="DNI">DNI:</label>
						<input id="DNI" type="number" name="DNI" value="<%=locals.usuario.dni %>">
					</div>
					<div>
						<label for="profile">Foto de perfil:</label>
						<input id="profile" type="text" name="profile" value="<%=locals.usuario.foto_perfil %>">
					</div>
					<div>
						<button type="submit">Enviar</button>
					</div>
				</form>		
			</h2>


			<%- include('./partials/footer') %>

</body>

</html>